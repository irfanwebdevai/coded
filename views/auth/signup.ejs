<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=VT323:wght@400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="auth-body">
    <!-- Header -->
    <header class="header">
        <nav class="navbar">
            <div class="nav-container">
                <div class="nav-brand">
                    <span class="brand-icon">üõ°Ô∏è</span>
                    <a href="/" style="text-decoration: none; color: inherit;">Codedx</a>
                </div>
                
                <div class="nav-actions">
                    <a href="/auth/login" class="btn-secondary">
                        <span>üîê</span>
                        <span>Login</span>
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Sign Up Section -->
    <section class="auth-section">
        <div class="container">
            <div class="auth-container">
                <div class="auth-header">
                    <h1 class="auth-title">Join the Quest</h1>
                    <p class="auth-subtitle">Begin your coding adventure today</p>
                </div>

                <!-- Flash Messages -->
                <% if (typeof error !== 'undefined' && error.length > 0) { %>
                    <div class="flash-message error">
                        <i class="fas fa-exclamation-circle"></i>
                        <%= error %>
                    </div>
                <% } %>

                <% if (typeof success !== 'undefined' && success.length > 0) { %>
                    <div class="flash-message success">
                        <i class="fas fa-check-circle"></i>
                        <%= success %>
                    </div>
                <% } %>

                <!-- OAuth Buttons -->
                <div class="oauth-section">
                    <a href="/auth/google" class="oauth-btn google-btn">
                        <span class="oauth-icon">üîç</span>
                        <span>Continue with Google</span>
                    </a>
                    
                    <a href="/auth/github" class="oauth-btn github-btn">
                        <span class="oauth-icon">üêô</span>
                        <span>Continue with GitHub</span>
                    </a>
                </div>

                <!-- Divider -->
                <div class="divider">
                    <span class="divider-text">or sign up with email</span>
                </div>

                <!-- Sign Up Form -->
                <form action="/auth/signup" method="POST" class="auth-form">
                    <div class="form-group">
                        <label for="name" class="form-label">
                            <i class="fas fa-user"></i>
                            Full Name
                        </label>
                        <input 
                            type="text" 
                            id="name" 
                            name="name" 
                            class="form-input" 
                            placeholder="Enter your full name"
                            required
                        >
                    </div>

                    <div class="form-group">
                        <label for="email" class="form-label">
                            <i class="fas fa-envelope"></i>
                            Email Address
                        </label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            class="form-input" 
                            placeholder="Enter your email"
                            required
                        >
                    </div>

                    <div class="form-group">
                        <label for="password" class="form-label">
                            <i class="fas fa-lock"></i>
                            Password
                        </label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            class="form-input" 
                            placeholder="Create a password"
                            minlength="6"
                            required
                        >
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword" class="form-label">
                            <i class="fas fa-lock"></i>
                            Confirm Password
                        </label>
                        <input 
                            type="password" 
                            id="confirmPassword" 
                            name="confirmPassword" 
                            class="form-input" 
                            placeholder="Confirm your password"
                            minlength="6"
                            required
                        >
                    </div>

                    <button type="submit" class="btn-primary auth-submit">
                        <span class="quest-icon">‚öîÔ∏è</span>
                        <span>Create Account</span>
                    </button>
                </form>

                <!-- Sign In Link -->
                <div class="auth-footer">
                    <p class="auth-switch">
                        Already have an account? 
                        <a href="/auth/login" class="auth-link">Sign In</a>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <script src="/js/script.js"></script>
    <script>
        // Form validation
        document.querySelector('.auth-form').addEventListener('submit', function(e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Passwords do not match!');
                return false;
            }
            
            if (password.length < 6) {
                e.preventDefault();
                alert('Password must be at least 6 characters long!');
                return false;
            }
        });

        // Auto-hide flash messages
        setTimeout(() => {
            const flashMessages = document.querySelectorAll('.flash-message');
            flashMessages.forEach(msg => {
                msg.style.opacity = '0';
                setTimeout(() => msg.remove(), 300);
            });
        }, 5000);
    </script>
</body>
</html> 