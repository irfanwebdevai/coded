# =============================================================================
# Codedx Automation System - Environment Configuration
# =============================================================================

# Database Configuration
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/codedx
# or for MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/codedx

# Email Configuration (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@codedx.com
NOTIFICATION_EMAIL=admin@codedx.com,alerts@codedx.com

# AWS S3 Configuration (Optional)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BACKUP_BUCKET=codedx-backups

# Google Drive Configuration (Optional)
# =============================================================================
# Service account credentials JSON (minified)
GOOGLE_DRIVE_CREDENTIALS={"type":"service_account","project_id":"your-project","private_key_id":"key-id","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"service@project.iam.gserviceaccount.com","client_id":"client-id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/service%40project.iam.gserviceaccount.com"}
GOOGLE_DRIVE_FOLDER_ID=your-folder-id

# Slack Configuration (Optional)
# =============================================================================
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#alerts

# Discord Configuration (Optional)
# =============================================================================
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CHANNEL_ID=your-channel-id

# Telegram Configuration (Optional)
# =============================================================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# GitHub Configuration (Optional)
# =============================================================================
GITHUB_TOKEN=your-github-personal-access-token

# Application Configuration
# =============================================================================
APP_URL=https://codedx.vercel.app
NODE_ENV=production
PORT=3000

# Deployment Configuration (Optional)
# =============================================================================
DEV_DOMAIN=dev.codedx.vercel.app
STAGING_DOMAIN=staging.codedx.vercel.app
PROD_DOMAIN=codedx.vercel.app

# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/automation.log

# Backup Configuration
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false

# Health Monitoring Configuration
# =============================================================================
HEALTH_CHECK_INTERVAL=300000
HEALTH_ALERT_THRESHOLD_CPU=80
HEALTH_ALERT_THRESHOLD_MEMORY=85
HEALTH_ALERT_THRESHOLD_DISK=90
HEALTH_ALERT_THRESHOLD_RESPONSE_TIME=2000

# Notification Configuration
# =============================================================================
NOTIFICATION_RATE_LIMIT_EMAIL=10
NOTIFICATION_RATE_LIMIT_SLACK=20
NOTIFICATION_RATE_LIMIT_DISCORD=20
NOTIFICATION_RATE_LIMIT_TELEGRAM=30

# Cleanup Configuration
# =============================================================================
CLEANUP_LOG_RETENTION_DAYS=30
CLEANUP_TEMP_RETENTION_DAYS=7
CLEANUP_BACKUP_RETENTION_DAYS=90
CLEANUP_REPORT_RETENTION_DAYS=180

# Report Configuration
# =============================================================================
REPORT_FORMAT=html
REPORT_INCLUDE_CHARTS=true
REPORT_TIMEZONE=UTC

# Security Configuration
# =============================================================================
SESSION_SECRET=your-super-secret-session-key-min-32-characters
ENCRYPTION_KEY=your-32-character-encryption-key

# Performance Configuration
# =============================================================================
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT=300000
MEMORY_LIMIT=512

# =============================================================================
# Notes:
# =============================================================================
# 1. Replace all placeholder values with your actual credentials
# 2. Keep this file secure and never commit it to version control
# 3. Use different credentials for development, staging, and production
# 4. Regularly rotate your API keys and tokens
# 5. Monitor your usage limits for external services
# =============================================================================